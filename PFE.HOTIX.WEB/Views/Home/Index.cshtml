@using static PFE.HOTIX.WEB.Helpers.NavigationIndicatorHelper
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    PFE.HOTIX.Entities.Parc curParc = null;
    string strParc = HttpContextAccessor.HttpContext.Session.GetString("Parc");

    if (!string.IsNullOrEmpty(strParc))
    {
        curParc = Newtonsoft.Json.JsonConvert.DeserializeObject<PFE.HOTIX.Entities.Parc>
    (strParc);
    }
}


<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            .background img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .text-overlay {
            position: absolute;
            top: 15%;
            left: 50%;
            transform: translate(-50%, 0);
            text-align: center;
            width: 100%;
            padding-top: 20px;
            font-family: "Sitka Subheading Semibold", sans-serif; 
        }

            .text-overlay h1 {
                color: #080000;
                font-size: 50px; 
            }

            .text-overlay .info {
                text-transform: uppercase;
            }
    </style>
</head>

<body>
    <div class="background">
        <img src="~/dist/img/a11.jpg" />
        <div class="text-overlay">
            <h1>
                <u>
                    BIENVENUE </br> @if (curParc != null)
                    {
                        <span class="info">AU  @curParc.nom_parc.ToUpper()</span>
                    }
                </u>



            </h1>
        </div>
    </div>
</body>
</html>
