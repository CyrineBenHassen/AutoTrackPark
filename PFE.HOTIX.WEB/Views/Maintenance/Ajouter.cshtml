@model PFE.HOTIX.WEB.Models.MaintenanceViewModel

@{
    ViewData["Title"] = "Ajouter Maintenance";
}

<div class="card card-teal card-outline">

    <div class="card-header">
        <br />
        <h2 class="card-title">Ajouter une maintenance</h2>
    </div>
   
    <form class="form-horizontal" asp-action="Ajouter" asp-controller="maintenance">

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="matricule_voiture" class="col-sm-2 col-form-label"> Matricule voiture:</label>
                <div class="col-sm-10">
                    <input asp-for="matricule_voiture" class="form-control" placeholder="matricule voiture" />
                    <span asp-validation-for="matricule_voiture" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description_Maintenance" class="col-sm-2 col-form-label">Description maintenance:</label>
                <div class="col-sm-10">
                    <input asp-for="Description_Maintenance" class="form-control" placeholder="description  maintenance" />
                    <span asp-validation-for="Description_Maintenance" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Date_Maintenance" class="col-sm-2 col-form-label">Date maintenance:</label>
                <div class="col-sm-10">
                    <input asp-for="Date_Maintenance" class="form-control" placeholder="Date maintenance" />
                    <span asp-validation-for="Date_Maintenance" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Lieu_Maintenance" class="col-sm-2 col-form-label">Lieu maintenance: </label>
                <div class="col-sm-10">
                    <input asp-for="Lieu_Maintenance" class="form-control" placeholder="Lieu maintenance" />
                    <span asp-validation-for="Lieu_Maintenance" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <label asp-for="id_type_maintenance" class="col-sm-2 col-form-label"> Type maintenance: </label>
                <div class="col-sm-10">
                    <select asp-for="id_type_maintenance" class="form-control" size="1"
                            asp-items="@(new SelectList(Model.Types_Maintenances,"id_type_maintenance","name_type"))">
                        <option id="0" value="0">-- select -- </option>
                    </select>
                    <span asp-validation-for="id_type_maintenance" class="text-danger"></span>
                </div>
            </div>


            <button value="Ajouter" type="submit" class="btn btn-success float-right"> <i class="fa fa-check"></i> Ajouter</button>
            <button asp-action="Index" class="btn btn-danger "><i class="fas fa-arrow-left"></i> Annuler </button>
        </div>
    </form>
</div>


