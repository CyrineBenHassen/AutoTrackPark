@model PFE.HOTIX.WEB.Models.MaintenanceViewModel

@{
    ViewData["Title"] = "Modifier Maintenance";
}

<div class="card card-teal card-outline">

    <div class="card-header">
        <br />
        <h2 class="card-title"> Modifier une maintenance</h2>
    </div>
  
    <form class="form-horizontal" asp-action="Modifier" asp-controller="Maintenance">

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group row" style="display: none;">
                <label asp-for="id_maintenance" class="col-sm-2 col-form-label">Id maintenance :</label>
                <div class="col-sm-10">
                    <input asp-for="id_maintenance" class="form-control" placeholder="Id maintenance" />
                    <span asp-validation-for="id_maintenance" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="matricule_voiture" class="col-sm-2 col-form-label">Matricule voiture : </label>
                <div class="col-sm-10">
                    <input asp-for="matricule_voiture" class="form-control" />
                    <span asp-validation-for="matricule_voiture" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description_Maintenance" class="col-sm-2 col-form-label">Description maintenance :</label>
                <div class="col-sm-10">
                    <input asp-for="Description_Maintenance" class="form-control" placeholder="Description" />
                    <span asp-validation-for="Description_Maintenance" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Lieu_Maintenance" class="col-sm-2 col-form-label">Lieu maintenance:</label>
                <div class="col-sm-10">
                    <input asp-for="Lieu_Maintenance" class="form-control" placeholder="Lieu" />
                    <span asp-validation-for="Lieu_Maintenance" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Date_Maintenance" class="col-sm-2 col-form-label"> Date maintenance:</label>
                <div class="col-sm-10">
                    <input asp-for="Date_Maintenance" class="form-control" placeholder="Date" />
                    <span asp-validation-for="Date_Maintenance" class="text-danger"></span>
                </div>
            </div>





          
                    <div class="form-group row">

                        <label asp-for="id_type_maintenance" class="col-sm-2 col-from-control"> Type maintenance:</label>
                <div class="col-sm-10">

                        <select asp-for="id_type_maintenance" class="form-control" size="1" asp-items="@(new SelectList(Model.Types_Maintenances ,"id_type_maintenance","name_type"))">
                            @if ((@Model != null) && (@Model.Maintenance != null) && (@Model.Maintenance.Type_Maintenance != null))
                            {
                                <option id="@Model.Maintenance.Type_Maintenance.id_type_maintenance" value="@Model.Maintenance.Type_Maintenance.id_type_maintenance">@Model.Maintenance.Type_Maintenance.name_type</option>
                            }
                            else
                            {
                                <option id="0" value="0">-- select -- </option>
                            }
                        </select>
                        <span asp-validation-for="id_type_maintenance" class="text-danger"></span>
                    </div>
               
                    </div>





            <button value="Modifier" type="submit" class="btn btn-success float-right"> <i class="fa fa-check"></i> Modifier</button>
            <button asp-action="Index" class="btn btn-danger "><i class="fas fa-arrow-left"></i> Annuler </button>
        </div>
    </form>
</div>
