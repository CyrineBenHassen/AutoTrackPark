@model PFE.HOTIX.WEB.Models.ParcViewModel

@{
    ViewData["Title"] = "Modifier";
}


<div class="card card-teal card-outline">
    <div class="card-header">
        <br />
        <h2 class="card-title">Modifier un parc</h2>
       
    </div>

    <form class="form-horizontal" asp-action="Modifier" asp-controller="parc">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
            <div class="form-group row" style="display: none;">
                <label asp-for="id_parc" class="col-sm-2 col-form-label">Id Parc : </label>
                <div class="col-sm-10">
                    <input asp-for="id_parc" class="form-control" />
                    <span asp-validation-for="id_parc" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">

                <label asp-for="nom_parc" class="col-sm-2 col-form-label">Nom de parc :</label>
                <div class="col-sm-10">
                    <input asp-for="nom_parc" class="form-control" />
                    <span asp-validation-for="nom_parc" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="email_parc" class="col-sm-2 col-form-label"> Email de parc : </label>
                <div class="col-sm-10">
                    <input asp-for="email_parc" class="form-control" />
                    <span asp-validation-for="email_parc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="tel_parc" class="col-sm-2 col-form-label">Téléphone de parc : </label>
                <div class="col-sm-10">
                    <input asp-for="tel_parc" class="form-control" />
                    <span asp-validation-for="tel_parc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="adresse_parc" class="col-sm-2 col-form-label">Adresse de parc : </label>
                <div class="col-sm-10">
                    <input asp-for="adresse_parc" class="form-control" type="text" />
                    <span asp-validation-for="adresse_parc" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="id_user" class="col-sm-2 col-form-label">Responsable de parc : </label>
                <div class="col-sm-10">
                    <select asp-for="id_user" class="form-control" size="1"
                            asp-items="@(new SelectList(Model.Users,"Id","FullName"))">
                        @if ((@Model != null) && (@Model.Parc != null) && (@Model.Parc.User != null) && (@Model.Parc.User.FullName != null))
                        {
                            <option id="@Model.Parc.User.Id" value="@Model.Parc.User.Id">@Model.Parc.User.FullName</option>
                        }
                        else
                        {
                            <option id="0" value="0">-- select -- </option>
                        }
                    </select>
                    <span asp-validation-for="id_user" class="text-danger"></span>
                </div>
            </div>

            <button value="Modifier" type="submit" class="btn btn-success float-right"> <i class="fa fa-check"></i> Modifier </button>
            <button asp-action="Index" class="btn btn-danger "><i class="fas fa-arrow-left"></i> Annuler </button>
        </div>

    </form>
</div>





