@model PFE.HOTIX.WEB.Models.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "_LayoutFullScreen";
}



<div id="login-page">
    <div class="login">
        <h2 class="login-title">Connectez-vous </h2>

        <form class="form-login" asp-controller="Account" asp-action="Login">

            <div>
                <label for="email">Nom d'utilisateur : </label>
                <div class="input-email">
                    <i class="fas fa-user icon"></i>
                    <input asp-for="Username" type="text" placeholder="Nom d'utilisateur" value="@Model.Username" />
                </div>
                <div style="color:#08085A; font-size:15px; text-align:center;  position: relative; bottom: -35px; left: 6%;">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>



            <div>
                <label for="password">Mot de passe : </label>
                <div class="input-password">
                    <i class="fas fa-lock icon"></i>

                    <input asp-for="Password" type="password" placeholder="Mot de passe" value="@Model.Password" />
                </div>

                <div style="color:#08085A; font-size:15px; text-align:center;  position: relative; bottom: -35px; left: 6%;">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

            </div>
            <button type="submit"><i class="fas fa-door-open"></i> Se connecter </button>

        </form>


    </div>

    <div class="background">

        <img src="~/dist/img/erik-mclean-_OaxFZBHSx4-unsplash.jpg" />

    </div>
</div>


<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0px;
        font-family: Rockwell Nova;
    }

    a {
        color: #666;
        font-size: 17px;
        display: block;
    }

    .login-title {
        text-align: center;
        margin-top: 115px;
    }

    #login-page {
        display: flex;
    }

    .notice {
        font-size: 17px;
        text-align: center;
        color: #666;
    }

    .login {
        width: 35%;
        height: 100vh;
        background: #B9B9D9;
        padding: 82px;
    }


    .background img {
        width: 100%; 
        height: 100%;
    }

    .login a {
        margin-top: 100px;
        text-align: center;
    }

    .form-login {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        align-content: center;
    }

        .form-login label {
            text-align: left;
            font-size: 15px;
            margin-top: 50px;
            margin-left: 20px;
            color: #666;
        }

    .input-email,
    .input-password {
        width: 130%;
        background: #ededed;
        border-radius: 35px;
        margin: 2px 10px -30px 10px;
        padding: 10px;
        display: flex;
    }

    .icon {
        padding: 5px;
        color: #666;
        min-width: 30px;
        text-align: center;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        border: 0;
        background: none;
        font-size: 16px;
        padding: 4px 0;
        outline: none;
    }

    button[type="submit"] {
        width: 100%;
        border: 0;
        border-radius: 25px;
        padding: 14px;
        background: #08085A;
        color: #FFF;
        display: inline-block;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        margin-top: 80px;
        transition: ease all 0.3s;
    }

        button[type="submit"]:hover {
            opacity: 0.9;
        }


    .background h1 {
        max-width: 420px;
        color: #FFF;
        text-align: right;
        padding: 0;
        margin: 0;
    }

    .background p {
        max-width: 650px;
        color: #1a1a1a;
        font-size: 15px;
        text-align: right;
        padding: 0;
        margin: 15px 0 0 0;
    }

    .created {
        margin-top: 100px;
        text-align: center;
    }

        .created p {
            font-size: 13px;
            font-weight: bold;
            color: #008552;
        }

        .created a {
            color: #666;
            font-weight: normal;
            text-decoration: none;
            margin-top: 0;
        }
</style>
