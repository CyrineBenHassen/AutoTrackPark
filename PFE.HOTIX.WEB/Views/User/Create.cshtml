@model PFE.HOTIX.WEB.Models.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-teal card-outline">
    <div class="card-header">
        <h2 class="card-title">Ajouter un  utilisateur</h2>
    </div>

    <form class="form-horizontal" asp-action="Create" enctype="multipart/form-data">   

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">

                <label asp-for="FullName" class="col-sm-2 col-form-label">Nom et Prénom:</label>
                <div class="col-sm-10">
                    <input asp-for="FullName" class="form-control" placeholder="Nom et Prénom" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserRoleId" class="col-sm-2 col-form-label">Rôle: </label>
                <div class="col-sm-10">
                    <select asp-for="UserRoleId" class="form-control" size="1"
                            asp-items="@(new SelectList(Model.UserRoles,"Id","Name"))">
                        <option id="0" value="0">-- select -- </option>
                    </select>
                    <span asp-validation-for="UserRoleId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-2 col-form-label">Téléphone: </label>
                <div class="col-sm-10">
                    <input asp-for="Phone" class="form-control" placeholder="telephone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CreationDate" class="col-sm-2 col-form-label">Date Création: </label>
                <div class="col-sm-10">
                    <input asp-for="CreationDate" class="form-control" placeholder="Date Creation" type="date" value='@DateTime.Today.ToString()' />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label">Login: </label>
                <div class="col-sm-10">
                    <input asp-for="Login" class="form-control" placeholder="Login" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Mot De Passe: </label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="mot de passe" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BirthDate" class="col-sm-2 col-form-label">Date Naissance:</label>
                <div class="col-sm-10">
                    <input asp-for="BirthDate" class="form-control" placeholder="Date Naissance" type="date" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="File" class="col-sm-2 col-form-label">Image : </label>
                <div class="col-sm-10">
                    <input type="file" name="File" asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> <strong>@Html.DisplayNameFor(model => model.Active)</strong>
                </label>
            </div>

        </div>
        <div class="card-footer">
            <button value="Ajouter" type="submit" class="btn btn-success float-right"> <i class="fa fa-check"></i> Ajouter</button>

            <button asp-action="Index" class="btn btn-danger "><i class="fas fa-arrow-left"></i> Annuler</button>
        </div>

    </form>
</div>
