@model PFE.HOTIX.WEB.Models.ReservationViewModel

@{
    ViewData["Title"] = "Consulter";
}


<section class="content-header">
    <br />
    <br />

    <div class="container-fluid">


        <div class="card card-teal card-outline">
            <div class="card-body box-profile">

                <h2 class="card-title">Détails d'une réservation</h2>



            </div>
            
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6" style="display: none;">
                        <div class="form-group" >
                            <strong>

                                Id  réservation :
                            </strong>  @Html.DisplayFor(model => model.id_reservation)



                        </div>

                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <strong>
                                <i class="far fa-calendar-alt"></i>

                                Date début d'une réservation:
                            </strong>  <p class="text-muted">@Html.DisplayFor(model => model.datedebutreservation)</p>

                        </div>
                    </div>

                   
                    <div class="col-md-6">
                        <div class="form-group">
                            <strong> <i class="far fa-calendar-alt"></i> Date fin d'une réservation:</strong>
                            <p class="text-muted">
                                @Html.DisplayFor(model => model.datefinresrvation)
                            </p>
                        </div>

                    </div>

                </div>

                <hr>

                <div class="row">
                    


                    <div class="col-md-6">
                        <div class="form-group">
                            <strong><i class="far fa-file-alt"></i> Description d'une réervation:</strong>
                            <p class="text-muted"> @Html.DisplayFor(model => model.description_reservation)</p>
                        </div>
                    </div>
              

                
               
                    <div class="col-md-6">
                        <div class="form-group">
                            <i class="fas fa-check"></i>
                            <strong>
                                État demande :
                            </strong>
                            <p class="text-muted">
                                @Html.DisplayFor(model => model.Reservation.Etat_demande.etat_name)
                            </p>
                        </div>
                    </div>


                   
                    
               </div>

               <hr>


                <div class="row">

                    @if ((Model.Reservation.Etat_demande.id_etat_demande == (int)PFE.HOTIX.Entities.Enumeration.EtatDemande.CONFIRMER) ||  (Model.Reservation.Etat_demande.id_etat_demande == (int)PFE.HOTIX.Entities.Enumeration.EtatDemande.ARCHIVER))
                    {

                    <div class="col-md-6">
                        <div class="form-group">
                            <strong> <i class="fa fa-car"></i> Matricule voiture</strong>
                            <p class="text-muted"> @Html.DisplayFor(model => model.Reservation.Voiture.matricule_voiture)</p>
                        </div>
                    </div>
                    }
                        <div class="col-md-6">
                            <div class="form-group">
                                <strong>   <i class="fas fa-parking"></i> Parc:</strong>
                                <p class="text-muted">
                                    @Html.DisplayFor(model => model.Reservation.Parc.nom_parc)
                                </p>
                            </div>

                        </div>
              
                    
                </div>
               

                <hr>
                

                <br />


                <div class="row">
                    <div class="col-12">
                    </div>
                    <div class="col-12">
                        <a class="btn btn-default bg-teal  float-right" href='@Url.Action("Modifier", "Reservation", new { id_reservation = @Model.id_reservation })'>
                            <i class="fas fa-user-edit"></i>
                            Modifier
                        </a>

                        <a class="btn btn-danger  float-left" href='@Url.Action("Index", "Reservation")'>
                            <i class="fas fa-arrow-left"></i>
                         Annuler
                        </a>


                    </div>
                </div>
             
            </div>



        </div>



        </div>


</section>