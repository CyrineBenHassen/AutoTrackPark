@model PFE.HOTIX.WEB.Models.TypeMaintenanceModel
@{
    ViewData["Title"] = "Ajouter type maintenance";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body"
                <div class="card card-teal card-outline">
                    <div class="card-header">
                        <h2 class="card-title">Modifier un type maintenance </h2>
                    </div>


 <form class="mt-4" asp-controller="Typemaintenance" asp-action="Modifier">


     <div class="form-group"  style="display: none;">
                        <label for="exampleInputPassword1">id type maintenance </label>
                        <input asp-for="id_type_maintenance" class="form-control" placeholder=" Entrer id type ">
                        <span asp-validation-for="id_type_maintenance" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Nom type maintenance:</label>
                        <input asp-for="name_type" class="form-control" id="exampleInputPassword1" placeholder=" Entrer Nom type ">
                        <span asp-validation-for="name_type" class="text-danger"></span>
                    </div>


                    <button value="Modifier" type="submit" class="btn btn-success float-right"> <i class="fa fa-check"></i> Modifier</button>
                     <button asp-action="Index" class="btn btn-danger "><i class="fas fa-arrow-left"></i> Annuler </button>
                </form>

            </div>
        </div>
        </div>
    </div>







                       